<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cardview_shadow_start_color"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="返回"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Client Service"/>

        <Switch
            android:id="@+id/inter_process_switch"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="是否跨进程" />

        <Button
            android:id="@+id/start_service_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_start_color"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:text="start_service"/>

        <Button
            android:id="@+id/stop_service_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_start_color"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:text="stop_service"/>

        <Button
            android:id="@+id/bind_service_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_start_color"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:text="bind_service"/>

        <Button
            android:id="@+id/unbind_service_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_start_color"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:text="unbind_service"/>
    </LinearLayout>

</FrameLayout>